<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".user_view_mechanic_details">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginBottom="100dp"
        android:textSize="30dp"
        android:text="Mechanic Details" />

    <TextView
        android:id="@+id/textView9a"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:textSize="12dp"
        android:layout_height="wrap_content"
        android:text="" />

    <TextView
        android:id="@+id/textView10a"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:textSize="12dp"
        android:layout_height="wrap_content"
        android:text="" />

    <TextView
        android:id="@+id/textView11a"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:textSize="12dp"
        android:layout_height="wrap_content"
        android:text="" />

    <TextView
        android:id="@+id/textView12a"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:textSize="12dp"
        android:layout_height="wrap_content"
        android:text="" />
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <Button
            android:id="@+id/buttona"
            android:layout_width="wrap_content"
            android:layout_marginLeft="70dp"
            android:backgroundTint="#00008B"
            android:layout_height="wrap_content"
            android:text="Location" />

        <Button
            android:id="@+id/button2a"
            android:layout_width="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#00008B"
            android:text="Request" /></TableRow>
</LinearLayout>